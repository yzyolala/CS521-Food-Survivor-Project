<div class="container-xxl py-5">
    {{#each data}}
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s"
                    style="max-width: 500px;">
                    <h1 class="display-5 mb-3">Search Results</h1>
                    <p>Here's your search results you wished to have with respective restaurant name or menu.</p>
                </div>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="product-item">
                    <div class="position-relative bg-light overflow-hidden">
                        <img class="img-fluid w-100" src="{{!-- Add image here --}}" alt="">
                    </div>
                    <div class="p-4">
                        <a class="d-block h5 mb-2 text-center" href="/restaurants/{{this._id}}">{{this.name}}</a>
                        <span class="text-primary me-1">Address: {{this.address}}</span>
                        {{!-- <span class="text-body text-decoration-line-through">Address</span> --}}
                        <span class="text-primary me-1">Menu: {{this.foodmenu}}</span><br>
                        <span class="text-primary me-1">Rating: {{this.rating}}</span>
                    </div>
                    <div class="d-flex border-top">
                        <div class="w-50 text-center py-2">
                            <a class="text-body" href="/restaurants/{{this._id}}"><i
                                    class="fa fa-eye text-primary me-2"></i>Visit Restaurant</a>
                        </div>
                        {{!-- <small class="w-50 text-center py-2">
                            <a class="text-body" href=""><i class="fa fa-shopping-bag text-primary me-2"></i>Rate</a>
                        </small> --}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    {{#if data}}
    {{else}}
    <div class="container-xxl py-6 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <i class="bi bi-exclamation-triangle display-1 text-primary"></i>
                    <h1 class="display-1">We're sorry, but no results were found. Please
                        search again!</h1>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
</div>